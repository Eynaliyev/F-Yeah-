<% if !user_signed_in? # if the user is not signed in, render this %>
    <style>
        body {
            background: linear-gradient( /* somewhat transparent film on top of the BG to make it look darker. */
                rgba(0,0,0, 0.7),
                rgba(0,0,0, 0.7)
                ), url("/header2.jpg") no-repeat center center fixed
            
            ; /* only display once, center horizontal and vertical, dont let scroll change position. */
            -webkit-background-size: cover;
            -moz-background-size: cover; /* cover the whole html element. */
            -o-background-size: cover;
            background-size: cover;
        }
        h1 {
            color: white;
            font-weight: bold;
        }
        .container-index {
            margin-right: 15%;
        }
        .text {
            color: white;
            font-weight: 300;
            font-size: 150%;
        }
        .footer-links {
            text-align: center;
            color: white;
            margin-top: 30%;
            font-size: 75%;
        }
        .log-in {
            float: right;
            width: 300px;
            height: 150px;
            margin-top: 7.5%;
        }
        .sign-up {
            float: right;
            height: 250px;
            width: 350px;
            background: none;
        }
        .log-in-form {
            margin: 5px;
        }
        .main-icon {
            height:75px;
            width:75px;
        }
        .after-icon {
            margin-left:5px;
        }
        
    </style>
    
    
    <div class="container-index row">
        <div class="col-sm-9">
            <h1>Welcome to Hapy Planet!</h1> <br><br>
            <p class="text">
                <img src="/othersyou-white.png" class="main-icon"> <b class="after-icon">Find out how people feel about you.</b><br><br> 
                <img src="/youothers-white.png" class="main-icon"> <b class="after-icon">Share how you feel about about others.</b><br><br>
                <img src="/othersothers-white.png" class="main-icon"> <b class="after-icon">Look up people and how others feel about them. Have fun!</b><br><br>
                
            </p>
        </div>
        <div class="col-sm-3">
            <div class="sign-up panel">
                <div class="input-group">
                     <%= form_for(:user, url: registration_path(:user)) do |f| %>
                        <%= f.text_field :username, autofocus: true, placeholder:"Username", class:"form-control" %><br>
                        <%= f.email_field :email, placeholder:"Email", class:"form-control" %><br>
                        <% if @minimum_password_length %>
                            <em>(<%= @minimum_password_length %> characters minimum)</em>
                        <% end %>
                        <%= f.password_field :password, autocomplete: "off", placeholder:"Password", class:"form-control" %> <br>
                        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"Repeat Password", class:"form-control" %> <br>
                        <span class="btn btn-submit" style="float: left; margin-top: 3px;"><%= f.submit "Sign up", class: "btn btn-primary" %></span>
                    <% end %>    
                </div>
            </div> 
        </div>
        <div class="col-sm-12">
            <p class="footer-links">About  Help  Blog  Status  Jobs  Terms  Privacy  Cookies  Ads  info  Brand  Advertise  Businesses  Media  Developers  Directory Â© 2016 Flutter</p>
        </div>
    </div>

<% else # if the user IS signed in, render the following %>

    <script>document.location = "/home"</script>

<% end %>

